{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",

    "description": "Adds a red border to all webpages matching mozilla.org.",

    "icons": {
      "48": "icons/border-48.png"
    },

    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["Borderify.js"]
      },
      {
        "matches": ["*://*.automatetheboringstuff.com/*"],
        "js": ["Borderify.js"]
      },

      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["Borderify.js"]
      }
    ]
}
